{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,

    "declaration": true,

    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*"]
}
